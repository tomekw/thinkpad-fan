#!/bin/sh
### BEGIN INIT INFO
# Provides: thinkpad
# Required-Start: $acpid
# Required-Stop: $acpid
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Thinkpad Fan Control
# Description: Thinkpaf Fan Control
### END INIT INFO

# Source function library.
. /etc/init.d/functions

DAEMON=tp-fancontrol

prog=tp-fancontrol

start () {
	echo -n $"Starting $prog: "
	/usr/bin/tp-fancontrol &
        RETVAL=$?
	echo
	[ $RETVAL = 0 ]
	return 0
}

stop () {
	# stop daemon
	echo -n $"Stopping $prog: "
	killproc $DAEMON
	RETVAL=$?
	echo
	[ $RETVAL = 0 ]
	return 0
}

restart() {
	stop
	start
}

case $1 in
	start)
		start
	;;
	stop)
		stop
	;;
	restart)
		restart
	;;
	status)
		status $DAEMON
		RETVAL=$?
	;;
	*)

	echo $"Usage: $prog {start|stop|restart|status}"
	exit 3
esac

exit $RETVAL
